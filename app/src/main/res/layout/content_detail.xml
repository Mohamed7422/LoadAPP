<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailActivity"
    tools:showIn="@layout/activity_detail"
    android:padding="12dp"
    app:layoutDescription="@xml/motion"
    >

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FileName"
        android:textSize="@dimen/default_text_size"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf=" @id/file_description"


        />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"

        android:layout_margin="12dp"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/file_description"
        />

    <TextView
        android:id="@+id/file_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/file_name"
        app:layout_constraintStart_toEndOf="@id/file_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="afedsegfsgdfhgيسdafedsegfsgdfhgيسdafedsegfsgdfhgيسdafedsegfsgdfhgيسdafedsegfsgdfhgيسdafedsegfsgdfhgيسd" />

    <TextView
        android:id="@+id/status_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        android:layout_marginEnd="12dp"

        tools:text="af edseg يسd" />


    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="OK"
        android:textSize="@dimen/default_text_size"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.motion.widget.MotionLayout>